
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="au theme template">
    <meta name="author" content="">
    <meta name="keywords" content="au theme template">

    <!-- Title Page-->
    <title>@ViewBag.Title - Admin page</title>

    <!-- Fontfaces CSS-->
  
    <link href="~/Areas/Asset/css/font-face.css" rel="stylesheet" media="all">
    <link href="~/Areas/Asset/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <link href="~/Areas/Asset/vendor/font-awesome-5/css/fontawesome-all.min.css" rel="stylesheet" media="all">
    <link href="~/Areas/Asset/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link rel="stylesheet" href="~/Areas/Asset/css/style.css">
    <!-- Bootstrap CSS-->
    <link href="~/Areas/Asset/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" media="all">

    <!-- Vendor CSS-->
    <link href="~/Areas/Asset/vendor/animsition/animsition.min.css" rel="stylesheet" media="all">
    <link href="~/Areas/Asset/vendor/bootstrap-progressbar/bootstrap-progressbar-3.3.4.min.css" rel="stylesheet" media="all">
    <link href="~/Areas/Asset/vendor/wow/animate.css" rel="stylesheet" media="all">
    <link href="~/Areas/Asset/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" media="all">
    <link href="~/Areas/Asset/vendor/slick/slick.css" rel="stylesheet" media="all">
    <link href="~/Areas/Asset/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/Areas/Asset/vendor/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="~/Areas/Asset/css/theme.css" rel="stylesheet" media="all">
    <style>
        .ck-editor__editable {
            min-height: 250px;
        }
    </style>

</head>

<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <header class="header-mobile d-block d-lg-none">
            <div class="header-mobile__bar">
                <div class="container-fluid">
                    <div class="header-mobile-inner">
                        <a href="#" class="logo-link">
                            <img src="~/Areas/Asset/images/logo-bw.png">

                        </a>
                        <button class="hamburger hamburger--slider" type="button">
                            <span class="hamburger-box">
                                <span class="hamburger-inner"></span>
                            </span>
                        </button>
                    </div>
                </div>
            </div>
            <nav class="navbar-mobile">
                <div class="container-fluid">
                    <ul class="navbar-mobile__list list-unstyled">
                        <li class="has-sub">
                            <a class="js-arrow" href="index.html">
                                <i class="fas fa-tachometer-alt"></i>Thống kê
                            </a>

                        </li>
                        <li>
                            <a href="ManageCategory.html">
                                <i class="fas fa-chart-bar"></i>Quản lý danh mục
                            </a>
                        </li>
                        <li>
                            <a href="ManageProduct.html">
                                <i class="fas fa-chart-bar"></i>Quản lý tour
                            </a>
                        </li>
                        <li>
                            <a href="./ManageOrder.html">
                                <i class="fas fa-chart-bar"></i>Quản lý đơn hàng
                            </a>
                        </li>
                        <li>
                            <a href="ManageAccount.html">
                                <i class="fas fa-table"></i>Quản lý tài khoản
                            </a>
                        </li>
                        <li>
                            <a href="ManageNews.html">
                                <i class="fas fa-table"></i>Quản lý tin tức
                            </a>
                        </li>





                    </ul>
                </div>
            </nav>
        </header>
        <!-- END HEADER MOBILE-->
        <!-- MENU SIDEBAR-->
        <aside class="menu-sidebar d-none d-lg-block">
            <div class="logo">
                <a href="./index.html" class="logo-link">
                    <img src="~/Areas/Asset/images/logo-bw.png" alt="">
                    <!-- VietNam Travel -->
                </a>
            </div>
            <div class="menu-sidebar__content js-scrollbar1">
                <nav class="navbar-sidebar">
               
                    <ul class="list-unstyled navbar__list">
                        
                        <li class="@(HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()=="ManageCategory" ? "active":"")">
                            <a href="@Url.Action("Index","ManageCategory")">
                                <i class="fas fa-chart-bar"></i>
                                <span>Quản lý danh mục</span>
                            </a>
                        </li>
                        <li class="@(HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString()=="ManagePost" ? "active":"")">
                            <a href="@Url.Action("Index","ManagePost")">
                                <i class="fas fa-table"></i>
                                <span>Quản lý tin tức</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>
        <!-- END MENU SIDEBAR-->
        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <header class="header-desktop">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="header-wrap">
                            <form class="form-header" action="" method="POST">
                                <input class="au-input au-input--xl" type="text" name="search" placeholder="Search for datas &amp; reports..." />
                                <button class="au-btn--submit" type="submit">
                                    <i class="zmdi zmdi-search"></i>
                                </button>
                            </form>
                            <div class="header-button">

                                <div class="account-wrap">
                                    <div class="account-item clearfix js-item-menu">

                                        <div class="content">
                                            <a class="js-acc-btn" href="#">Tuấn Anh</a>
                                        </div>
                                        <div class="account-dropdown js-dropdown">
                                            <div class="info clearfix">

                                                <div class="content">
                                                    <h5 class="name">
                                                        <a href="#">Tuấn Anh</a>
                                                    </h5>
                                                    <span class="email">anhdt@gmail.com</span>
                                                </div>
                                            </div>
                                            <div class="account-dropdown__body">
                                                <div class="account-dropdown__item">
                                                    <a href="#">
                                                        <i class="zmdi zmdi-account"></i>Account
                                                    </a>
                                                </div>


                                            </div>
                                            <div class="account-dropdown__footer">
                                                <a href="#">
                                                    <i class="zmdi zmdi-power"></i>Logout
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
            <!-- HEADER DESKTOP-->
            <!-- MAIN CONTENT-->
            <div class="main-content">
                @RenderBody()
            </div>
        </div>
        <!-- END MAIN CONTENT-->
        <!-- END PAGE CONTAINER-->
    </div>



    <!-- Jquery JS-->
    <script src="~/Areas/Asset/vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="~/Areas/Asset/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="~/Areas/Asset/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="~/Areas/Asset/vendor/slick/slick.min.js"></script>
    <script src="~/Areas/Asset/vendor/wow/wow.min.js"></script>
    <script src="~/Areas/Asset/vendor/animsition/animsition.min.js"></script>
    <script src="~/Areas/Asset/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js"></script>
    <script src="~/Areas/Asset/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/Areas/Asset/vendor/counter-up/jquery.counterup.min.js"></script>
    <script src="~/Areas/Asset/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/Areas/Asset/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/Areas/Asset/vendor/chartjs/Chart.bundle.min.js"></script>
    <script src="~/Areas/Asset/vendor/select2/select2.min.js"></script>
    <script src="https://cdn.ckeditor.com/ckeditor5/31.0.0/classic/ckeditor.js"></script>
    
    <script src="~/Areas/Asset/js/UrlHelper.js"></script>
    <!-- Main JS-->
    <script src="~/Areas/Asset/js/main.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .then(editor => {
                console.log(editor);
            })
            .catch(error => {
                console.error(error);
            });
        ClassicEditor.replace('editor1', {
            htmlEncodeOutput: true
        });
    </script>


</body>

</html>
<!-- end document-->
