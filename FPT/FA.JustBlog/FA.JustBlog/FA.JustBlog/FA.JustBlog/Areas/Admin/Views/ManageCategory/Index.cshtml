@using FA.JustBlog.ViewModels.Categories
@model IEnumerable<CategoryViewModel>

@{
    var message = TempData["Message"] as string;
}

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}





<div class="section__content section__content--p30">
    
    <div class="container-fluid">
        <button class="au-btn au-btn-icon au-btn--green au-btn--small">
            <a href="@Url.Action("Create", "ManageCategory")" class="btn  text-white">
                <i class="fas fa-plus"></i> Thêm danh mục
            </a>
        </button>
        <br />
        <br>
        <div class="row">
            <div class="col-lg-12">
                <h2 class="title-1 m-b-25">Quản lý danh mục</h2>
                <div class="table-responsive table--no-card m-b-40">
                    <table class="table table-borderless table-striped table-earning">
                        <thead>
                            <tr>
                                <th>Mã</th>
                                <th>Name</th>
                                <th>Url Slug</th>
                                <th>Description</th>
                                <th class="text-right">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.UrlSlug)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                    <td class="text-right">
                                        <a href="@Url.Action("Update","ManageCategory",new {id = item.Id})"
                                           class="btn btn-sm bg-primary-light mr-2">
                                            <i class="far fa-edit mr-1"></i>Sửa
                                        </a>

                                        <a href="@Url.Action("Delete","ManageCategory",new {id = item.Id})"
                                           class=" btn btn-sm bg-danger-light mr-2 delete_review_comment">
                                            <i class="far fa-trash-alt mr-1"></i>Xóa
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
        
    </div>
</div>