@using FA.JustBlog.ViewModels.Posts
@model IEnumerable<GetAllPostViewModel>

@{
    var message = TempData["Message"] as string;
}


@{
    ViewBag.Title = "View";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}



<div class="section__content section__content--p30">
    <div class="container-fluid">
        <div class="row">
            <button class="au-btn au-btn-icon au-btn--green au-btn--small">
                <a href="@Url.Action("Create", "ManagePost")" class="btn  text-white">
                    <i class="fas fa-plus"></i> Thêm tin tức
                </a>
            </button>
         

        </div>
        <br>
        <div class="row">
            <div class="col-lg-12">
                <h2 class="title-1 m-b-25">Quản lý tin tức</h2>
                <div class="table-responsive table--no-card m-b-40">
                    <table class="table table-borderless table-striped table-earning">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Created On</th>
                                <th class="text-right">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ShortDescription)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ViewCount)</td>
                                    <td class="text-right">
                                        <a href="@Url.Action("Details","ManagePost",new {id = item.Id})"
                                           class="btn btn-sm bg-primary-light mr-2">
                                            <i class="far fa-eye mr-1"></i>Detail
                                        </a>
                                        <a href="@Url.Action("Update","ManagePost",new {id = item.Id})"
                                           class="btn btn-sm bg-primary-light mr-2">
                                            <i class="far fa-edit mr-1"></i>Edit
                                        </a>

                                        <a href="@Url.Action("Delete","ManagePost",new {id = item.Id})"
                                           class=" btn btn-sm bg-danger-light mr-2 delete_review_comment">
                                            <i class="far fa-trash-alt mr-1"></i>Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
        
    </div>
</div>